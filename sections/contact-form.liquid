<div class="main-container">
  {% form 'contact' %}
    {% if form.errors %}
      <div class="alert login__alert alert-danger">
        {{ form.errors | default_errors }}
      </div>

    {% elsif form.posted_successfully? %}
      <div class="alert login__alert alert-success">Your messsage is sent successfully!</div>
    {% endif %}

    <div class="contact-form">
      <div class="row justify-content-between">
        <div class="col-lg">
          <div class="form-group">
            <label class="form-group__label" for="contact_name">Name</label>
            <input class="form-group__input" type="text" name="contact[name]" id="contact_name">
          </div>
        </div>
        <div class="col-lg">
          <div class="form-group">
            <label class="form-group__label" for="contact_email">Email</label>
            <input
              class="form-group__input"
              type="email"
              name="contact[email]"
              id="contact_email"
            >
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="form-group__label" for="contact_message">Message</label>
        <textarea
          class="form-group__input"
          name="contact[body]"
          id="contact_message"
        ></textarea>
      </div>
      <div class="login__button">
        <input
          type="submit"
          class="button"
          value="Submit message"
        >
      </div>
    </div>
  {% endform %}
</div>
